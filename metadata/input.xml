<?xml version="1.0"?>
<wayfire>
	<plugin name="input">
	<_short>Input Options</_short>
	<category>General</category>
	<option name="tap_to_click" type="bool">
		<_short>Tap to Click</_short>
		<default>true</default>
	</option>
	<option name="disable_while_typing" type="bool">
		<_short>Disable while Typing</_short>
		<default>false</default>
	</option>
	<option name="natural_scroll" type="bool">
		<_short>Natural Scroll</_short>
