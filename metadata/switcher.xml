<?xml version="1.0"?>
<wayfire>
	<plugin name="switcher">
	<_short>Application Switcher</_short>
	<category>Window Management</category>
	<option name="view_thumbnail_scale" type="double">
		<_short>View Thumbnail Size</_short>
		<default>1.0</default>
	</option>
	<option name="touch_sensitivity" type="double">
		<_short>Touch Sensitivity</_short>
		<default>1.0</default>
	</option>
	<option name="speed" type="int">
		<_short>Speed</_short>
		<default>500</default>
	</option>
	<option name="next_view" type="key">
		<_short>Next View</_short>
		<default>&lt;super&gt; KEY_TAB</default>
	</option>
	<option name="prev_view" type="key">
		<_short>Previous View</_short>
		<default>&lt;super&gt; &lt;shift&gt; KEY_TAB</default>
	</option>
	<option name="gesture_toggle" type="string">
		<_short>Gesture Toggle</_short>
		<default>edge-swipe down 3</default>
	</option>
	</plugin>
</wayfire>
